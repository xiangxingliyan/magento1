<layout version="1.0.0">
    <ave40_base_fastorder_index>
        <remove name="right"/>
        <remove name="left"/>
        <reference name="head">
            <action method="setTitle" translate="title">
                <title>Fast Order</title>
            </action>
            <action method="addItem"><type>skin_css</type><name>css/fast_order.css</name></action>
        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="ave40_base/fastorder" name="Ave40base.fastorder" template="ave40_base/fastorder.phtml"/>
        </reference>
    </ave40_base_fastorder_index>
</layout>